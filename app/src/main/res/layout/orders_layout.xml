<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/EbmBlue"
        android:padding="10dp">

        <TextView
            android:id="@+id/order_userName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Nom Complet"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/order_phoneNumber"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12dp"
            android:text="Telephone"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_phoneNumber"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="17dp"
            android:gravity="center"
            android:text="Prix"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/order_shipping_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_price"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="17dp"
            android:gravity="center"
            android:text="Address, City"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_shipping_Address"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="17dp"
            android:gravity="center"
            android:text="DateTime"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/show_all_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:text="Afficher cette commande"
            android:textColor="@color/EbmBlue"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            />

    </RelativeLayout>

</RelativeLayout>